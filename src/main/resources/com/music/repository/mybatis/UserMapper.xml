<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.music.repository.mybatis.UserMapper">
    <select id="findByLoginId" resultType="User">
        SELECT * FROM users WHERE login_id = #{loginId}
    </select>

    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (login_id, password, username, created_at)
        VALUES (#{loginId}, #{password}, #{username}, #{createdAt})
    </insert>
</mapper>